<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="">
  <meta name="author" content="Mosaddek">
  <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
  <link rel="shortcut icon" href="/img/favicon.png">

  <title>Los Jueves de los pibes</title>

  <!-- Bootstrap core CSS -->
  <link href="/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/bootstrap-reset.css" rel="stylesheet">
  <!--external css-->
  <link href="/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />

  <!-- Custom styles for this template -->
  <link href="/css/style.css" rel="stylesheet">
  <link href="/css/style-responsive.css" rel="stylesheet" />
</head>
  <body>

  <section id="container" class="">
      <!--header start-->
      <%- include('../partials/headerAdmin.ejs') %>
      <!--header end-->
      
      <!--Include Sidebar-->
      <%- include('../partials/sidebarAdmin.ejs') %>
      <!--sidebar end-->

      <!--main content start-->
      <section id="main-content">
        <section class="wrapper">
          <!-- page start-->
          <div class="row">
            <div class="col-lg-12">
              <div class="btn-group d-flex" role="group">
                <div class="buttonexport">
                  <a data-toggle="modal" href="#myModal-add">
                    <button class="btn btn-add" type="button"><i class="fa fa-plus"></i> Agregar nueva reunión</button>
                  </a>
                </div>
              </div>
              <!-- Modal Add Day-->
              <div class="modal fade" id="myModal-add" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header modal-header-secondary" style="background-color: black;">
                      <h4><i class="fa fa-trash m-r-5"></i> Agregar nueva fecha de juntada</h4>
                    </div>
                    <div class="modal-body">
                      <form action="/admin/add" method="POST" method="POST" id="form">
                      <h6>Complete los datos de la nueva juntada:</h6>
                      <br>
                      <label  class="control-label">Fecha del evento:</label>
                      <input type="date" name="date" class="form-control" id="date"/>
                      <br>
                      <label  class="control-label">Tipo de juntada:</label>
                      <select class="form-control" name="type" id="juntadaType" required>
                        <option value="Jueves">Jueves</option>
                        <option value="Cumpleaños">Cumpleaños</option>
                        <option value="Evento Especial">Evento Especial</option>
                      </select>
                      <br>
                      <label  class="control-label">Sede:</label>
                      <input type="text" name="sede" class="form-control" id="sede"/>
                      <br>
                      <label  class="control-label">Descripcion:</label>
                      <input type="text" name="description" class="form-control" id="description"/>
                      <br>
                      <div id="espacioInputContainer" class="d-none">
                        <label class="control-label">Puntos a asignar:</label>
                        <input type="number" name="specialPoints" class="form-control" id="specialPoints" min="1"/>
                        <br>
                      </div>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary btn-md" data-dismiss="modal">Cancelar</button>
                      <button type="submit" class="btn btn-primary btn-md">Agregar</button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
              <!-- End modal Add Day-->
                <section class="card">
                    <header class="card-header">
                        Administrar Días
                    </header>
                    <table class="table table-striped table-advance table-hover">
                        <thead>
                        <tr>
                            <th>Fecha</th>
                            <th>Tipo</th>
                            <th>Sede</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% for (day of days) { %>
                        <tr>
                            <td><%= day.date %></td>
                            <td><%= day.type %></td>
                            <td><%= day.sede %></td>
                            <td>
                              <% if (day.active == 1) { %>
                                <span class="badge badge-primary label-mini">Abierto</span>
                              <% } else { %>
                                <span class="badge badge-secondary label-mini">Cerrado</span>
                              <% } %>
                            </td>
                            <td>
                                <% if (day.active == 1) { %>
                                  <a href="/admin/edit/<%= day.id %>">
                                    <button class="btn btn-primary btn-sm"><i class="fa fa-pencil"></i></button>
                                  </a>
                                  <% } else { %>
                                    <a href="/admin/detail/<%= day.id %>">
                                      <button class="btn btn-success btn-sm"><i class="fa fa-eye"></i></button>
                                    </a>
                                  <% } %>
                                <a data-toggle="modal" href="#myModal-<%= day.id %>">
                                  <button class="btn btn-danger btn-sm"><i class="fa fa-trash-o "></i></button>
                                </a>
                            <!-- Modal To Delete -->
                            <div class="modal fade" id="myModal-<%= day.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                              <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                  <div class="modal-header modal-header-primary" style="background-color: black;">
                                    <h4><i class="fa fa-trash m-r-5"></i> Eliminar Juntada</h4>
                                  </div>
                                  <div class="modal-body">
                                    <h6>Está a punto de eliminar una fecha de juntada.</h6>
                                    <br>
                                    <h6>Esta acción no se puede deshacer</h6>
                                  </div>
                                  <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary btn-md" data-dismiss="modal">Cancelar</button>
                                    <form action="/admin/destroy/<%= day.id %>?_method=PUT" method="POST" method="POST" id="form">
                                      <button type="submit" class="btn btn-danger btn-md">Eliminar</button>
                                    </form>
                                  </div>
                                </div>
                              </div>
                            </div>
                            <!-- End Modal To Delete -->
                            </td>
                        </tr>
                        <% } %>
                        </tbody>
                    </table>
                </section>
            </div>
        </div>
          <!-- page end-->
        </section>
      </section>
      <!--main content end-->

      <!-- Include footer -->
        <%- include('../partials/footer.ejs') %>
      <!-- footer end -->
  </section>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="/js/jquery.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script class="include" type="text/javascript" src="/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="/js/jquery.scrollTo.min.js"></script>
    <script src="/js/slidebars.min.js"></script>
    <script src="/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="/js/respond.min.js" ></script>

    <!--common script for all pages-->
    <script src="/js/common-scripts.js"></script>

    <script>
    $(document).ready(function() {
    // 1. Obtener los elementos del DOM usando sus IDs
    const $selectType = $('#juntadaType');
    const $inputContainer = $('#espacioInputContainer');

    // 2. Definir la función que maneja la lógica
    function toggleEspacioInput() {
        // Obtenemos el valor seleccionado actualmente
        const selectedValue = $selectType.val();
        
        // Verificamos si el valor es "Evento Especial"
        if (selectedValue === 'Evento Especial') {
            // Si es "Evento Especial", mostramos el input
            // removeClass('d-none') elimina la clase que lo oculta
            $inputContainer.removeClass('d-none');
        } else {
            // Si es cualquier otra opción, ocultamos el input
            // addClass('d-none') agrega la clase para ocultarlo
            $inputContainer.addClass('d-none');
        }
    }

    // 3. Asociar la función al evento 'change' del select
    $selectType.on('change', toggleEspacioInput);
    
    // Opcional: Ejecutar la función una vez al cargar la página 
    // por si el modal se abre con un valor preseleccionado.
    toggleEspacioInput(); 
    });
    </script>

  </body>
</html>
