<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="">
  <meta name="author" content="Mosaddek">
  <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
  <link rel="shortcut icon" href="/img/favicon.png">

  <title>Los Jueves de los pibes</title>

  <!-- Bootstrap core CSS -->
  <link href="/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/bootstrap-reset.css" rel="stylesheet">
  <!--external css-->
  <link href="/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />

  <!-- Custom styles for this template -->
  <link href="/css/style.css" rel="stylesheet">
  <link href="/css/style-responsive.css" rel="stylesheet" />
</head>
  <body>

  <section id="container" class="">
      <!--header start-->
      <%- include('../partials/headerAdmin.ejs') %>
      <!--header end-->
      
      <!--Include Sidebar-->
      <%- include('../partials/sidebarAdmin.ejs') %>
      <!--sidebar end-->

      <!--main content start-->
      <section id="main-content">
        <section class="wrapper">
          <!-- page start-->
          <div class="row">
            <div class="col-lg-12">
                <section class="card">
                    <header class="card-header">
                        Editar una juntada
                    </header>
                    <form action="/admin/update/<%= dayToEdit.id %>?_method=PUT" method="POST" id="form" class="main-form"  enctype="multipart/form-data">
                      <div class="row">
                        <div class="col-md-12">
                          <div class="row">
                            <div class="col-md-11 form-group" style="margin: 10px;">
                              <label class="control-label">Fecha de juntada:</label>
                              <input type="date" name="date" class="form-control" id="date" value="<%= dayToEdit.date %>" readonly/>
                              <br>
                              <label class="control-label">Tipo de juntada:</label>
                              <input type="text" name="type" class="form-control" id="type" value="<%= dayToEdit.type %>" readonly/>
                              <br>
                              <label class="control-label">Sede de juntada:</label>
                              <input type="text" name="sede" class="form-control" id="sede" value="<%= dayToEdit.sede %>" readonly/>
                            </div>
                            <div class="col-md-12 form-group" style="margin: 10px;">
                              <label class="control-label">Presentes en la juntada:</label>
                              <div class="col-md-12 form-group">
                                  <% for( user of users ) { %>
                                  <input type="checkbox" id="presents" value="<%= user.id %>" name="presents">
                                  <label for="<%= user.id %>" style="font-size: larger;"> - <%= user.nickname %></label>
                                  <br>
                                  <% } %>
                              </div>
                              <div class="col-md-12 form-group" style="margin-bottom: 10px;">
                                <label class="control-label">Adjuntar Foto:</label>
                                <br>
                                <input type="file" name="attach" id="attach" required>
                              </div>
                            </div>
                          </div>
                          <div class="col-md-12 form-group">
                            <button type="submit" class="btn btn-success btn-md">Guardar</button>
                            <a href="/admin/admindays"><button type="button" class="btn btn-danger btn-md">Cancelar</button></a>
                          </div>
                        </div>
                      </div>
                    </form>
                </section>
            </div>
        </div>
          <!-- page end-->
        </section>
      </section>
      <!--main content end-->

      <!-- Include footer -->
        <%- include('../partials/footer.ejs') %>
      <!-- footer end -->
  </section>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="/js/jquery.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script class="include" type="text/javascript" src="/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="/js/jquery.scrollTo.min.js"></script>
    <script src="/js/slidebars.min.js"></script>
    <script src="/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="/js/respond.min.js" ></script>

    <!--common script for all pages-->
    <script src="/js/common-scripts.js"></script>



  </body>
</html>
