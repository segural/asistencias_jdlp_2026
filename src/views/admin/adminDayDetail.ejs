<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="">
  <meta name="author" content="Mosaddek">
  <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
  <link rel="shortcut icon" href="/img/favicon.png">

  <title>Los Jueves de los pibes</title>

  <!-- Bootstrap core CSS -->
  <link href="/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/bootstrap-reset.css" rel="stylesheet">
  <!--external css-->
  <link href="/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />

  <!-- Custom styles for this template -->
  <link href="/css/style.css" rel="stylesheet">
  <link href="/css/style-responsive.css" rel="stylesheet" />
  <style>
    /* Estilo para la imagen miniatura */
    .thumbnail {
        width: 35%;  /* Tama침o peque침o de la imagen */
        cursor: pointer;
        margin-bottom: 10px;
    }
  </style>
</head>
  <body>

  <section id="container" class="">
      <!--header start-->
      <%- include('../partials/headerAdmin.ejs') %>
      <!--header end-->
      
      <!--Include Sidebar-->
      <%- include('../partials/sidebarAdmin.ejs') %>
      <!--sidebar end-->

      <!--main content start-->
      <section id="main-content">
        <section class="wrapper">
          <!-- page start-->
          <div class="row">
            <div class="col-lg-12">
                <section class="card">
                    <header class="card-header">
                        Detalle de juntada
                    </header>
                      <div class="row">
                        <div class="col-md-12">
                          <div class="row">
                            <div class="col-md-11 form-group" style="margin: 10px;">
                              <label class="control-label">Fecha de juntada:</label>
                              <input type="date" name="date" class="form-control" id="date" value="<%= day.date %>" readonly/>
                              <br>
                              <label class="control-label">Tipo de juntada:</label>
                              <% if (day.description == null) {%>
                                <input type="text" name="type" class="form-control" id="type" value="<%= day.type %>" readonly/>
                              <% } else { %>
                                <input type="text" name="type" class="form-control" id="type" value="<%= day.description %>" readonly/>
                              <% } %>
                              <br>
                              <label class="control-label">Sede de juntada:</label>
                              <input type="text" name="sede" class="form-control" id="sede" value="<%= day.sede %>" readonly/>
                            </div>
                            <div class="col-md-12 form-group" style="display: flex; justify-content: space-around;">
                              <div class="col-md-6 form-group">
                                  <label class="control-label">Presentes en la juntada:</label>
                                  <br>
                                  <% for( present of day.presents ) { %>
                                  <label> - <%= present.nickname %></label>
                                  <br>
                                  <% } %>
                              </div>
                              <div class="col-md-6 form-group">
                                  <label class="control-label">Ausentes en la juntada:</label>
                                  <br>
                                  <% for( absent of absents ) { %>
                                    <% if (absent != undefined) {%>
                                      <label> - <%= absent.nickname %></label>
                                      <br>
                                      <% }} %>
                              </div>
                            </div>
                            <div style="display: flex; justify-content: center">
                              <img src="/img/photos/<%= day.photo %>" alt="Imagen en miniatura" class="thumbnail" id="thumbnail">
                            </div>
                          </div>
                        </div>
                      </div>
                </section>
            </div>
        </div>
          <!-- page end-->
        </section>
      </section>
      <!--main content end-->

      <!-- Include footer -->
        <%- include('../partials/footer.ejs') %>
      <!-- footer end -->
  </section>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="/js/jquery.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script class="include" type="text/javascript" src="/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="/js/jquery.scrollTo.min.js"></script>
    <script src="/js/slidebars.min.js"></script>
    <script src="/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="/js/respond.min.js" ></script>
    <script>
      // Obtener la imagen de miniatura por su ID
      const thumbnail = document.getElementById('thumbnail');

      // Funci칩n para abrir la imagen en una nueva ventana
      thumbnail.onclick = function() {
          // Crear una nueva ventana con la imagen a tama침o completo
          window.open(thumbnail.src, '_blank');
      };
    </script>

    <!--common script for all pages-->
    <script src="/js/common-scripts.js"></script>



  </body>
</html>
