        <title>Los Jueves de los pibes</title>
        
        <!-- Bootstrap core CSS -->
        <link href="/css/bootstrap.min.css" rel="stylesheet">
        <link href="/css/bootstrap-reset.css" rel="stylesheet">

        <!--external css-->
        <link href="/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
        <link rel="stylesheet" type="text/css" href="/assets/gritter/css/jquery.gritter.css" />

        <!-- Custom styles for this template -->
        <link href="/css/style.css" rel="stylesheet">
        <link href="/css/style-responsive.css" rel="stylesheet" />
    
        <!-- Custom styles for this template -->
        
    </head>

    <body class="login-body">

        <div class="container">
        <form class="form-signin" action="/admin/login" method="POST" id="form" novalidate>
            <h2 class="form-signin-heading">Ingresar</h2>
            <div class="login-wrap">
                <% if (locals.errors && errors.noUser) { %>
                    <p class="text-danger"><%= errors.noUser.msg %></p>
                <% } %>
                <% if (locals.errors && errors.userInactive) { %>
                    <p class="text-danger"><%= errors.userInactive.msg %></p>
                <% } %> 
                <input type="text" class="form-control" name="user" placeholder="Usuario" autofocus value="<%= locals.old && old.user %>">
                <% if (locals.errors && errors.user) { %>
                    <p class="text-danger small"><%= errors.user.msg %></p>
                <% } %>
                <input type="password" class="form-control" name="password" placeholder="Contraseña" value="<%= locals.old && old.password %>">
                <% if (locals.errors && errors.password) { %>
                    <p class="text-danger"><%= errors.password.msg %></p>
                <% } %>
                <label class="checkbox">
                    <input type="checkbox" name="rememberMe"> Recordame
                </label>
                <div class="card-body">
                    <button class="btn btn-lg btn-login btn-block" type="submit">Enviar</button>
                </div>
            </div>
        </form>
        <!-- Este input es para almacenar el valor de la cookie que se llama abajo en el script de Gritter -->
        <input id="userReset" type="text" value="<%= req.cookies.userReset %>" hidden>
    </div>



    <!-- js placed at the end of the document so the pages load faster -->
    <script src="js/jquery.js"></script>
    <script src="js/bootstrap.bundle.min.js"></script>
    <script src="/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script type="text/javascript" src="/assets/gritter/js/jquery.gritter.js"></script>

    <!--script for this page only-->
    <script src="/js/gritter.js" type="text/javascript"></script>

    <!--common script for all pages-->
    <script src="/js/common-scripts.js"></script>


    <script>            
        $(document).ready (function(){
            if ($('#userReset').val() == "true") {
                $.gritter.add({
                    // (string | mandatory) the heading of the notification
                    title: 'Atención!',
                    // (string | mandatory) the text inside the notification
                    text: 'Su contraseña se ha actualizado exitosamente',
                    class_name: 'gritter-light'
                });
                return false;
            };
        });
    </script>

  </body>
</html>