<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="">
  <meta name="author" content="Mosaddek">
  <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
  <link rel="shortcut icon" href="/img/favicon.png">

  <title>Los Jueves de los pibes</title>

  <!-- Bootstrap core CSS -->
  <link href="/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/bootstrap-reset.css" rel="stylesheet">
  <!--external css-->
  <link href="/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />

  <!-- Custom styles for this template -->
  <link href="/css/style.css" rel="stylesheet">
  <link href="/css/style-responsive.css" rel="stylesheet" />
</head>
  <body>

  <section id="container" class="">
      <!--header start-->
      <%- include('../partials/headerAdmin.ejs') %>
      <!--header end-->
      
      <!--Include Sidebar-->
      <%- include('../partials/sidebarAdmin.ejs') %>
      <!--sidebar end-->

      <!--main content start-->
      <section id="main-content">
        <section class="wrapper">
                      <!-- page start-->
                      <div class="btn-group d-flex" role="group">
                        <div class="buttonexport">
                          <a data-toggle="modal" href="#myModal-add">
                            <button class="btn btn-add" type="button"><i class="fa fa-plus-circle"></i> / <i class="fa fa-minus-circle"></i> Agregar o quitar puntos</button>
                          </a>
                        </div>
                      </div>
                      <!-- Modal Points-->
                      <div class="modal fade" id="myModal-add" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                          <div class="modal-content">
                            <div class="modal-header modal-header-secondary" style="background-color: black;">
                              <h4><i class="fa fa-trash m-r-5"></i> Agregar o quitar puntos</h4>
                            </div>
                            <div class="modal-body">
                              <form action="/admin/changepoints/<%= user.id %>" method="POST" method="POST" id="form">
                              <h6>Complete datos para asignar o descontar puntos:</h6>
                              <br>
                              <label  class="control-label">Fecha del evento:</label>
                              <input type="date" name="date" class="form-control" id="date"/>
                              <br>
                              <label  class="control-label">Acción:</label>
                              <select class="form-control" name="action" required>
                                <option value="plus">Asigna puntos</option>
                                <option value="minus">Descuenta puntos</option>
                              </select>
                              <br>
                              <label  class="control-label">Puntos:</label>
                              <input type="number" name="points" class="form-control" id="points"/>
                              <br>
                              <label  class="control-label">Descripcion:</label>
                              <input type="text" name="description" class="form-control" id="description"/>
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-secondary btn-md" data-dismiss="modal">Cancelar</button>
                              <button type="submit" class="btn btn-primary btn-md">Enviar</button>
                              </form>
                            </div>
                          </div>
                        </div>
                      </div>
                      <!-- End modal Points-->
                      <div class="row">
                        <div class="col-md-9" style="margin: auto;">
                          <section class="card" style="border: 1px, solid, black;">
                            <header class="card-header">
                              Detalle de asignación de puntos de <%= user.nickname %>
                            </header>
                            <table class="table table-striped table-advance table-hover">
                                <thead>
                                <tr>
                                    <th>Fecha del evento</th>
                                    <th>Tipo de acción</th>
                                    <th>Description</th>
                                    <th>+ / - Puntos</th>
                                </tr>
                                </thead>
                                <tbody>
                                <% for (log of user.logs) { %>
                                <tr>
                                    <td><%= log.eventdate %></td>
                                    <td><%= log.logType %></td>
                                    <td><%= log.action %></td>
                                    <td><%= log.points %></td>
                                </tr>
                                <% } %>
                                </tbody>
                            </table>
                        </section>
                        </div>
                      </div>
                      <br>
                      <div class="row">
                        <div class="col-md-9" style="margin: auto;">
                          <section class="card" style="border: 1px, solid, black;">
                            <header class="card-header">
                              Totales
                            </header>
                            <table class="table table-striped table-advance table-hover">
                                <thead>
                                <tr>
                                    <th>Total Asistencias</th>
                                    <th>Total Faltas</th>
                                    <th>Puntos Premio</th>
                                    <th>Puntos Castigo</th>
                                    <th>Total Puntos</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td><%= user.present %></td>
                                    <td><%= user.absent %></td>
                                    <td><%= user.award %></td>
                                    <td><%= user.penalty %></td>
                                    <td><%= user.point %></td>
                                </tr>
                                </tbody>
                            </table>
                        </section>
                        </div>
                      </div>
          <!-- page end-->
        </section>
      </section>
      <!--main content end-->

      <!-- Include footer -->
        <%- include('../partials/footer.ejs') %>
      <!-- footer end -->
  </section>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="/js/jquery.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script class="include" type="text/javascript" src="/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="/js/jquery.scrollTo.min.js"></script>
    <script src="/js/slidebars.min.js"></script>
    <script src="/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="/js/respond.min.js" ></script>

    <!--common script for all pages-->
    <script src="/js/common-scripts.js"></script>



  </body>
</html>
