<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="">
  <meta name="author" content="Mosaddek">
  <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
  <link rel="shortcut icon" href="/img/favicon.png">

  <title>Los Jueves de los pibes</title>

  <!-- Bootstrap core CSS -->
  <link href="/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/bootstrap-reset.css" rel="stylesheet">
  <!--external css-->
  <link href="/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />

  <!-- Custom styles for this template -->
  <link href="/css/style.css" rel="stylesheet">
  <link href="/css/style-responsive.css" rel="stylesheet" />
</head>
  <body>

  <section id="container" class="">
      <!--header start-->
      <%- include('../partials/header.ejs') %>
      <!--header end-->
      
      <!--Include Sidebar-->
      <%- include('../partials/sidebar.ejs') %>
      <!--sidebar end-->

      <!--main content start-->
      <section id="main-content">
        <section class="wrapper">
          <!-- page start-->
          <div class="row">
            <div class="col-lg-12">
                <section class="card">
                    <header class="card-header">
                        Listado de DÃ­as
                    </header>
                    <table class="table table-striped table-advance table-hover">
                        <thead>
                        <tr>
                            <th>Fecha</th>
                            <th>Tipo</th>
                            <th>Sede</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% for (day of days) { %>
                        <tr>
                            <td><%= day.date %></td>
                            <td><%= day.type %></td>
                            <td><%= day.sede %></td>
                            <td>
                              <% if (day.active == 1) { %>
                                <span class="badge badge-primary label-mini">Pendiente</span>
                              <% } else { %>
                                <span class="badge badge-secondary label-mini">Finalizado</span>
                              <% } %>
                            </td>
                            <td>
                                <% if (day.active == 1) { %>
                                  <a href="#">
                                    <button class="btn btn-success btn-sm"><i class="fa fa-eye"></i></button>
                                  </a>
                                  <% } else { %>
                                    <a href="/detail/<%= day.id %>">
                                      <button class="btn btn-success btn-sm"><i class="fa fa-eye"></i></button>
                                    </a>
                                  <% } %>
                            </td>
                        </tr>
                        <% } %>
                        </tbody>
                    </table>
                </section>
            </div>
        </div>
          <!-- page end-->
        </section>
      </section>
      <!--main content end-->

      <!-- Include footer -->
        <%- include('../partials/footer.ejs') %>
      <!-- footer end -->
  </section>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="/js/jquery.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script class="include" type="text/javascript" src="/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="/js/jquery.scrollTo.min.js"></script>
    <script src="/js/slidebars.min.js"></script>
    <script src="/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="/js/respond.min.js" ></script>

    <!--common script for all pages-->
    <script src="/js/common-scripts.js"></script>



  </body>
</html>
