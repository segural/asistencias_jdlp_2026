<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="">
  <meta name="author" content="Mosaddek">
  <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
  <link rel="shortcut icon" href="/img/favicon.png">

  <title>Los Jueves de los pibes</title>

  <!-- Bootstrap core CSS -->
  <link href="/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/bootstrap-reset.css" rel="stylesheet">
  <!--external css-->
  <link href="/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />

  <!-- Custom styles for this template -->
  <link href="/css/style.css" rel="stylesheet">
  <link href="/css/style-responsive.css" rel="stylesheet" />
</head>
  <body>

  <section id="container" class="">
      <!--header start-->
      <%- include('../partials/headerAdmin.ejs') %>
      <!--header end-->
      
      <!--Include Sidebar-->
      <%- include('../partials/sidebarAdmin.ejs') %>
      <!--sidebar end-->

      <!--main content start-->
      <section id="main-content">
        <section class="wrapper">
          <!-- page start-->
          <div class="row">
            <div class="col-lg-12">
              <div class="btn-group d-flex" role="group">
                <div class="buttonexport">
                  <a data-toggle="modal" href="#myModal-add">
                    <button class="btn btn-add" type="button"><i class="fa fa-plus"></i> Agregar nuevo admin</button>
                  </a>
                </div>
              </div>
              <!-- Modal Add Admin -->
              <div class="modal fade" id="myModal-add" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header modal-header-secondary" style="background-color: black;">
                      <h4><i class="fa fa-trash m-r-5"></i> Agregar nuevo admin del sistema</h4>
                    </div>
                    <div class="modal-body">
                      <form action="/users/add" method="POST" method="POST" id="form">
                      <h6>Complete los datos:</h6>
                      <br>
                      <label  class="control-label">Username:</label>
                      <input type="text" name="username" class="form-control" id="username"/>
                      <br>
                      <label  class="control-label">Password:</label>
                      <input type="password" name="password" class="form-control" id="password"/>
                    </div>
                    <div class="modal-footer">
                      <button type="submit" class="btn btn-primary btn-md">Agregar</button>
                      <button type="button" class="btn btn-secondary btn-md" data-dismiss="modal">Cancelar</button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
              <!-- End modal Add Admin -->
                <section class="card">
                    <header class="card-header">
                        Administradores
                    </header>
                    <table class="table table-striped table-advance table-hover">
                        <thead>
                        <tr>
                            <th>Usuario</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% for (admin of admins) { %>
                        <tr>
                            <td><%= admin.username %></td>
                            <td>
                              <% if (admin.active == true) { %>
                                <span class="badge badge-primary label-mini">Habilitado</span>
                              <% } else { %>
                                <span class="badge badge-danger label-mini">Deshabilitado</span>
                              <% } %>
                            </td>
                            <td>
                                <a data-toggle="modal" href="#Edit-<%= admin.id %>">
                                  <button class="btn btn-primary btn-sm"><i class="fa fa-pencil "></i></button>
                                </a>
                                <a data-toggle="modal" href="#Delete-<%= admin.id %>">
                                  <button class="btn btn-danger btn-sm"><i class="fa fa-trash-o "></i></button>
                                </a>
                            <!-- Modal To Edit Admin -->
                            <div class="modal fade" id="Edit-<%= admin.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                              <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                  <div class="modal-header modal-header-primary" style="background-color: black;">
                                    <h4><i class="fa fa-trash m-r-5"></i> Eliminar Juntada</h4>
                                  </div>
                                  <div class="modal-body">
                                    <form action="/users/update/<%= admin.id %>?_method=PUT" method="POST" method="POST" id="form">
                                    <h6>Está a punto de editar un admin.</h6>
                                    <br>
                                    <label  class="control-label">Habilitar/Deshabilitar:</label>
                                    <select class="form-control" name="active" required>
                                      <% if (admin.active == true) { %>
                                        <option value="1" selected>Habilitado</option>
                                        <option value="0">Deshabilitado</option>
                                      <% } else { %>
                                        <option value="0" selected>Deshabilitado</option>
                                        <option value="1">Habilitado</option>
                                      <% } %>
                                    </select>
                                    <br>
                                    <label class="control-label">Password:</label>
                                    <input type="password" name="password" class="form-control" id="password" value=""/>
                                  </div>
                                  <div class="modal-footer">
                                      <button type="submit" class="btn btn-primary btn-md">Editar</button>
                                    </form>
                                    <button type="button" class="btn btn-secondary btn-md" data-dismiss="modal">Cancelar</button>
                                  </div>
                                </div>
                              </div>
                            </div>
                            <!-- End Modal Edit -->
                            <!-- Modal To Delete Admin-->
                            <div class="modal fade" id="Delete-<%= admin.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                              <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                  <div class="modal-header modal-header-primary" style="background-color: black;">
                                    <h4><i class="fa fa-trash m-r-5"></i> Eliminar Admin</h4>
                                  </div>
                                  <div class="modal-body">
                                    <h6>Está a punto de eliminar un admin.</h6>
                                    <br>
                                    <h6>Esta acción no se puede deshacer</h6>
                                  </div>
                                  <div class="modal-footer">
                                    <form action="/users/destroy/<%= admin.id %>?_method=PUT" method="POST" method="POST" id="form">
                                      <button type="submit" class="btn btn-danger btn-md">Eliminar</button>
                                    </form>
                                    <button type="button" class="btn btn-secondary btn-md" data-dismiss="modal">Cancelar</button>
                                  </div>
                                </div>
                              </div>
                            </div>
                            <!-- End Modal To Delete -->
                            </td>
                        </tr>
                        <% } %>
                        </tbody>
                    </table>
                </section>
            </div>
        </div>
          <!-- page end-->
        </section>
      </section>
      <!--main content end-->

      <!-- Include footer -->
        <%- include('../partials/footer.ejs') %>
      <!-- footer end -->
  </section>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="/js/jquery.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script class="include" type="text/javascript" src="/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="/js/jquery.scrollTo.min.js"></script>
    <script src="/js/slidebars.min.js"></script>
    <script src="/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="/js/respond.min.js" ></script>

    <!--common script for all pages-->
    <script src="/js/common-scripts.js"></script>



  </body>
</html>
